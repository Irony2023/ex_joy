import pygame

# Initialize pygame
pygame.init()

# Initialize the gamepad
pygame.joystick.init()

# Define the name of the Logitech F710 gamepad (adjust if necessary)
gamepad_name = "Logitech Gamepad F710"

# Find the gamepad device
gamepad = None
for joystick_id in range(pygame.joystick.get_count()):
    joystick = pygame.joystick.Joystick(joystick_id)
    joystick.init()
    if joystick.get_name() == gamepad_name:
        gamepad = joystick
        break

if gamepad is None:
    print(f"Device '{gamepad_name}' not found. Make sure it's connected.")
    pygame.quit()
    exit()

print(f"Found '{gamepad_name}'")

# Main loop to check for button events
running = True
x_button_pressed = False

while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Check for the X button
    x_button_state = gamepad.get_button(0)  # Replace 0 with the appropriate button index if needed

    if x_button_state == 1 and not x_button_pressed:
        x_button_pressed = True
        print("X button pressed")
    elif x_button_state == 0 and x_button_pressed:
        x_button_pressed = False
        print("X button released")

# Clean up pygame
pygame.quit()
