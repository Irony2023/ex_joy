import evdev

# Define the name of the Logitech Gamepad F710
gamepad_name = "Logitech Gamepad F710"

# List all input devices
devices = [evdev.InputDevice(fn) for fn in evdev.list_devices()]

# Search for the Logitech Gamepad F710
gamepad_found = False
gamepad_device = None

for device in devices:
    if device.name == gamepad_name:
        gamepad_found = True
        gamepad_device = device
        print(f"Device '{gamepad_name}' is connected to the gamepad.")
        break

# If the gamepad is not found, print a message
if not gamepad_found:
    print(f"Device '{gamepad_name}' is not connected to the gamepad.")
else:
    for event in gamepad_device.read_loop():
        if event.type == evdev.ecodes.EV_KEY:
            if event.code == evdev.ecodes.BTN_B:
                if event.value == 1:
                    print("B button pressed")
                elif event.value == 0:
                    print("B button released")
